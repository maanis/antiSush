<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Spotify Login Clone</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    function toggleForm(tab) {
      document.getElementById('signInForm').style.display = tab === 'signin' ? 'block' : 'none';
      document.getElementById('signUpForm').style.display = tab === 'signup' ? 'block' : 'none';
      document.getElementById('signInTab').classList.toggle('border-b-2', tab === 'signin');
      document.getElementById('signUpTab').classList.toggle('border-b-2', tab === 'signup');
    }
  </script>
</head>

<body class="bg-zinc-950 flex justify-center items-center min-h-screen">

  <% if (error.length> 0) { %>
    <div
      class="alert absolute top-0 bg-red-400 flex justify-center items-center p-3 alert-warning alert-dismissible fade show"
      role="alert">
      <p class="font-semibold">
        <%= error %>
      </p>
    </div>
    <% } %>

      <div class="bg-zinc-900 text-white rounded-lg shadow-lg p-8 w-96">
        <div class="flex justify-center mb-4">
          <img src="https://upload.wikimedia.org/wikipedia/commons/2/26/Spotify_logo_with_text.svg" alt="Spotify Logo"
            class="h-10">
        </div>
        <div class="flex justify-between mb-4">
          <button id="signInTab" onclick="toggleForm('signin')"
            class="w-1/2 text-center py-2 border-b-2 border-green-500">SIGN IN</button>
          <button id="signUpTab" onclick="toggleForm('signup')" class="w-1/2 text-center py-2">SIGN UP</button>
        </div>
        <div id="signInForm">
          <form action="/signin" method="POST">
            <div class="mb-4">
              <input type="text" name="username" placeholder="Username"
                class="w-full p-3 rounded-md bg-zinc-800 text-white placeholder-gray-400 focus:outline-none">
            </div>
            <div class="mb-4">
              <input type="password" name="password" placeholder="Password"
                class="w-full p-3 rounded-md bg-zinc-800 text-white placeholder-gray-400 focus:outline-none">
            </div>
            <div class="flex items-center mb-4">
            </div>
            <button type="submit"
              class="w-full bg-zinc-950 text-white py-2 rounded-md hover:bg-zinc-800 transition-all">SIGN
              IN</button>
            <div class="text-center mt-4">
              <a href="/forgot-password" class="text-sm text-gray-400 hover:text-white">Forgot Password?</a>
            </div>
          </form>
        </div>
        <div id="signUpForm" style="display: none;">
          <form action="/signup" method="POST">
            <div class="mb-4">
              <input type="text" name="username" placeholder="Username"
                class="w-full p-3 rounded-md bg-zinc-800 text-white placeholder-gray-400 focus:outline-none">
            </div>
            <div class="mb-4">
              <input type="password" name="password" placeholder="Password"
                class="w-full p-3 rounded-md bg-zinc-800 text-white placeholder-gray-400 focus:outline-none">
            </div>
            <div class="mb-4">
              <input type="email" name="email" placeholder="Email"
                class="w-full p-3 rounded-md bg-zinc-800 text-white placeholder-gray-400 focus:outline-none">
            </div>
            <button type="submit"
              class="w-full bg-zinc-950 text-white py-2 rounded-md hover:bg-zinc-800 transition-all">SIGN
              UP</button>
          </form>
        </div>
      </div>
</body>

</html>